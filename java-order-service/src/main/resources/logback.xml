<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- File log sẽ nằm trong container tại /app/logs/app.json.log -->
    <property name="LOG_PATH" value="/app/logs/app.json.log" />

    <!-- Appender ghi log ra file JSON + rotate theo ngày -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- File rotate theo ngày, nén lại -->
            <fileNamePattern>/app/logs/app-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <!-- Format JSON -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
            <includeContext>true</includeContext>
        </encoder>
    </appender>

    <!-- Log ra console (để docker logs xem) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
